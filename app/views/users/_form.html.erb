<%= form_for @user, data: { abide: ''} do |form| %>
  <% if @user.errors.any? %>
    <div class="row panel callout radius">
      <p>Aşağıdaki hataları düzeltip, tekrar deneyiniz.</p>
      <ul class="square">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="large-6 columns">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, required: true,
      									 pattern: :alpha %>
    <%= show_error_message %>
    </div>
    <div class="large-6 columns">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, required: true,
       									pattern: :alpha %>
      <%= show_error_message %>   	
    </div>

    <div class="large-12 columns">
      <%= form.label :username %>
      <%= form.text_field :username, required: true,
      							      pattern: :alpha %>
      <%= show_error_message %>
    </div>

    <div class="large-12 columns">
      <%= form.label :email %>
      <%= form.email_field :email, required: true,
      							      pattern: :email  %>
    <%= show_error_message %>  
    </div>

  <% if params[:action] == 'new' || params[:action] == 'create' %>
    <div class="large-6 columns">
      <%= form.label :password %>
      <%= form.password_field :password, required: true %>
    <%= show_error_message %>   
    </div>
    <div class="large-6 columns">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, required: true %>
    <%= show_error_message %>      
    </div>
    <% end %>
    <div class="large-12 columns">
      <%= form.submit class: 'medium button right' %>
    </div>
  </div>
<% end %>


